{
    "name": "chi-teck/drupal-code-generator",
    "description": "Drupal code generator",
    "license": "GPL-2.0-or-later",
    "bin": [
        "bin/dcg"
    ],
    "autoload": {
        "psr-4": {
            "DrupalCodeGenerator\\": "src"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev"
        }
    },
    "require": {
        "php": ">=7.1.0",
        "ext-json": "*",
        "symfony/console": "^3.4.0",
        "symfony/filesystem": "^3.4.0",
        "twig/twig": "^1.40.1"
    },
    "require-dev": {
        "allocine/twigcs": "^3.1.3",
        "drupal/coder": "^8.3.3",
        "phpunit/phpunit": "^7.5.0",
        "squizlabs/php_codesniffer": "^3.4.0",
        "symfony/var-dumper": "^4.2.0",
        "symfony/yaml": "^3.4.0"
    }
}
