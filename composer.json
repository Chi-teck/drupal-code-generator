{
  "name": "chi-teck/drupal-code-generator",
  "description": "Drupal code generator",
  "require": {
    "php": ">=7.1.0",
    "ext-json": "*",
    "symfony/console": "^3.4.0",
    "symfony/filesystem": "^3.4.0",
    "twig/twig": "^1.40.1"
  },
  "bin": [
    "bin/dcg"
  ],
  "autoload": {
    "psr-4": {
      "DrupalCodeGenerator\\": "src"
    }
  },
  "license": "GPL-2.0-or-later",
  "extra": {
    "branch-alias": {
        "dev-master": "2.x-dev"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5",
    "squizlabs/php_codesniffer": "^3.4",
    "drupal/coder": "^8.3.3",
    "allocine/twigcs": "^3.1.3",
    "symfony/var-dumper": "^4.2.0",
    "symfony/yaml": "^3.4.0"
  }
}
