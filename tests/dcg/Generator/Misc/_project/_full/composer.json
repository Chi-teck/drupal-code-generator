{
    "name": "example/foo",
    "description": "",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "autoload-dev": {
        "psr-4": {
            "ExampleFoo\\Tests\\": "tests/src"
        }
    },
    "require": {
        "php": ">=7.3",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-json": "*",
        "cweagans/composer-patches": "^1.6",
        "drupal/core-composer-scaffold": "^8.8",
        "drupal/core-recommended": "^8.8",
        "drush/drush": "^10.2",
        "oomphinc/composer-installers-extender": "^1.1",
        "symfony/dotenv": "^4.4",
        "zaporylie/composer-drupal-optimizations": "^1.1"
    },
    "require-dev": {
        "drupal/core-dev": "^8.8",
        "weitzman/drupal-test-traits": "^1.3"
    },
    "scripts": {
        "phpcs": "phpcs --standard=phpcs.xml"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "autoload": {
        "files": [
            "load.environment.php"
        ]
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/themes/{$name}": [
                "type:drupal-theme"
            ],
            "drush/{$name}": [
                "type:drupal-drush"
            ]
        }
    }
}
