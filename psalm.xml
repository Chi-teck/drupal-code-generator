<?xml version="1.0"?>
<psalm
    xmlns="https://getpsalm.org/schema/config"
    errorLevel="4"
    autoloader="psalm-autoloader.php"
>
    <projectFiles>
        <directory name="src"/>
        <ignoreFiles>
            <!-- Psalm reports issues about Twig by some reason. -->
            <directory name="vendor/twig"/>
        </ignoreFiles>
    </projectFiles>
<issueHandlers>
    <UndefinedInterfaceMethod>
        <errorLevel type="suppress">
            <referencedMethod name="/^Symfony\\Component\\Console\\Helper\\HelperInterface::.+$/"/>
        </errorLevel>
    </UndefinedInterfaceMethod>
</issueHandlers>
</psalm>
