<?php

namespace Drupal\{{ machine_name }}\Form;

use Drupal\Core\Entity\EntityDeleteForm;

/**
 * Builds the form to delete {{ entity_type_label|article|lower }}.
 */
class {{ class_prefix }}DeleteForm extends EntityDeleteForm {

  /**
   * {@inheritdoc}
   */
  public function getFormId() {
    return '{{ entity_type_ite }}_confirm_delete';
  }

  /**
   * {@inheritdoc}
   */
  public function getQuestion() {
    return $this->t('Are you sure you want to delete the {{ entity_type_label|lower }} %title?', ['%title' => $this->entity->label()]);
  }

  /**
   * {@inheritdoc}
   */
